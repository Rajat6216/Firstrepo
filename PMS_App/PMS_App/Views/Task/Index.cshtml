@model List<Task_Model>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<a href="@Url.Action("Create", "Task")" class="btn btn-danger float-lg-right add" style="padding:10px">Add Task</a>
<br />
<br />
<div class="List">
    <h6 class="m-0 font-weight-bold text-primary">Task Details</h6>
</div>
<div class="card shadow mb-4">
    <div class="box">
        <div class="box-shadow">
            <div class="table-responsive">
                <table class="table no-margin table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Task Name</th>
                            <th>Task Description</th>
                            <th>Working Employee</th>
                            <th>Project Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Is Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Task_Name</td>
                                <td>@item.Task_Description</td>
                                <td>@item.Emp_Name</td>
                                <td>@item.Project_Name</td>
                                <td>@item.StartDate.ToString()</td>
                                <td>@item.EndDate.ToString()</td>
                                <td>@(item.IsActive ? "Yes" : "No")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Task", new { id = item.Id })" class="btn btn-dark edit-btn">Edit</a>
                                    <a href="@Url.Action("Delete", "Task", new { id = item.Id })" class="btn btn-danger delete-btn">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.delete-btn').click(function () {
            var id = $(this).data('id');
            var row = $(this).closest('tr');

            if (confirm("Are you sure you want to delete this record?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Task")/' + id,
                    type: 'POST',
                    success: function (result) {
                        row.closest('tr').remove();
                    },
                    error: function (xhr, status, error) {
                        alert("Error deleting record: " + error);
                    }
                });
            }
        });
    });

</script>

<style>
    .List {
        padding: 20px;
        margin-left: 20px;
    }

    .add {
        margin-right: 20px;
        margin-top: 10px;
    }
</style>
